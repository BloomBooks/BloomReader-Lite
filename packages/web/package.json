{
    "name": "bloom-reader-lite-web",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && yarn copy-dist",
        "watch": "npm-run-all --parallel watchCode watchDist",
        "watchCode": "vite build --watch --minify false",
        "watchDist": "chokidar \"dist/**/*\" -c \"yarn copy-dist\" --debounce 1000",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "copy-dist": "ts-node --esm scripts/copyWebDist.mts",
        "postinstallComments": "// Runs automatically after running 'yarn' or 'yarn install'",
        "postinstall": "ts-node --esm ./scripts/postinstall.mts"
    },
    "dependencies": {
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "@mui/material": "^5.14.6",
        "bloom-player": "^2.1.28",
        "bloom-reader-lite-shared": "link:./../shared",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.4.5",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@types/uuid": "^9.0.2",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.0.3",
        "chokidar-cli": "^3.0.0",
        "eslint": "^8.45.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "fs": "^0.0.1-security",
        "npm-run-all": "^4.1.5",
        "path": "^0.12.7",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.2",
        "vite": "^4.4.5"
    },
    "packageManager": "yarn@1.22.19",
    "volta": {
        "node": "16.14.0",
        "yarn": "1.22.19"
    }
}
